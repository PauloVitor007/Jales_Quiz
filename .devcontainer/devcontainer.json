{
  "name": "Python 3 with Tkinter",
  "image": "mcr.microsoft.com/devcontainers/python:3.11-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/desktop-lite:1": {
      "password": "password",
      "webVnc": "true"
    }
  },
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y tk-dev",
  "forwardPorts": [
    6080
  ],
  "portsAttributes": {
    "6080": {
      "label": "Desktop"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python"
      ]
    }
  }
}
